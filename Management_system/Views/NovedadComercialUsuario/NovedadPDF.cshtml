@model Management_system.Models.NovedadComercial

@{
    ViewData["Title"] = "Detalle Novedad Comercial";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Novedad Comercial</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 14px;
            margin: 20px;
            padding: 0;
        }

        .container {
            width: 100%;
            max-width: 800px;
            margin: auto;
        }

        .title {
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            text-transform: uppercase;
            margin-bottom: 10px;
            border-bottom: 2px solid #007bff;
            padding-bottom: 5px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

            .table th, .table td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }

            .table th {
                background-color: #f0f0f0;
            }

        .observaciones {
            margin-top: 15px;
            padding: 10px;
            background: #f8f9fa;
            border-left: 5px solid #007bff;
        }

        .label {
            font-weight: bold;
            color: #333;
        }
    </style>
</head>

<body>
    <div class="container">
        <h2 class="title">Novedad Comercial</h2>

        <table class="table">
            <tbody>
                <tr>
                    <th>Fecha Creación</th>
                    <td>@Html.DisplayFor(model => model.Fecha)</td>
                    <th>Usuario</th>
                    <td>@Html.DisplayFor(model => model.IdUsuarioNavigation.Username)</td>
                </tr>
                <tr>
                    <th>Tipo de Servicio</th>
                    <td>@Html.DisplayFor(model => model.TipoServicio)</td>
                    <th>Tipo de Documento</th>
                    <td>@Html.DisplayFor(model => model.TipoDocumento)</td>
                </tr>
                <tr>
                    <th>N° Documento</th>
                    <td>@Html.DisplayFor(model => model.NumeroDocumento)</td>
                    <th>Tipo de Pago</th>
                    <td>@Html.DisplayFor(model => model.TipoPago)</td>
                </tr>
                <tr>
                    <th>Nombre Cliente</th>
                    <td>
                        @if (Model.IdClienteNavigation != null)
                        {
                            @Html.DisplayFor(model => model.IdClienteNavigation.Nombre)
                        }
                        else
                        {
                            @Html.DisplayFor(model => model.Empresa)
                        }
                    </td>
                    <th>Dirección</th>
                    <td>@Html.DisplayFor(model => model.Direccion)</td>
                </tr>
            </tbody>
        </table>

        <div class="observaciones">
            <strong>Observaciones:</strong>
            <p>@Html.DisplayFor(model => model.Observaciones1)</p>
        </div>
    </div>
</body>
</html>