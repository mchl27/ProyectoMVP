@model Management_system.Models.NovedadComercial

@{
    ViewData["Title"] = "Editar Novedad Comercial";
    Layout = "~/Views/Shared/_Layout_main.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

<style>
    .fixed-width-btn {
        width: 80px;
    }

    .alert-custom {
        color: red;
        font-size: 1.2em;
        display: none;
        margin-top: 10px;
    }

        .alert-custom i {
            margin-right: 5px;
        }

    .card {
        border-radius: 15px;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 500;
        margin-bottom: 0.75rem;
        color: #333;
        border-bottom: 1px solid #e5e5e5;
        padding-bottom: 0.5rem;
    }
</style>


<div class="container">
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>

<div class="container mt-2">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-center">Creación Novedad Comercial</h4>
                    <form asp-action="OverrideEdit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdNovedadComercial" />


                        <div class="row">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label asp-for="Fecha" class="control-label"></label>
                                    <input asp-for="Fecha" class="form-control" readonly />
                                    <span asp-validation-for="Fecha" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                    <label asp-for="TipoDocumento" class="control-label">Tipo Documento</label>
                                    <select asp-for="TipoDocumento" class="form-control" readonly>
                                        <option value="">Seleccionar Documento</option>
                                        <option value="FACTURA">FACTURA</option>
                                        <option value="REMISION">REMISION</option>
                                    </select>
                                    <span asp-validation-for="TipoDocumento" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="NumeroDocumento" class="control-label">N° Documento</label>
                                    <input asp-for="NumeroDocumento" class="form-control" readonly />
                                    <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="TipoServicio" class="control-label">Tipo de Servicio</label>
                                    <select asp-for="TipoServicio" class="form-control" readonly>
                                        <option value="">Seleccionar Servicio</option>
                                        <option value="COBRO">COBRO</option>
                                        <option value="LLEVAR MERCANCIA">LLEVAR MERCANCIA</option>
                                        <option value="RADICAR DOCUMENTO">RADICAR DOCUMENTO</option>
                                        <option value="RECOGER MERCANCIA">RECOGER MERCANCIA</option>
                                        <option value="RECOGER DEVOLUCION">RECOGER DEVOLUCIÓN</option>
                                    </select>
                                    <span asp-validation-for="TipoServicio" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label asp-for="FechaSalida" class="control-label"></label>
                                    <input asp-for="FechaSalida" class="form-control" type="date" readonly />
                                    <span asp-validation-for="FechaSalida" class="text-danger"></span>
                                </div>
                            </div>
                        </div>



                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="searchNombreC" class="control-label">Buscar Cliente (Nombre)</label>
                                    <input type="text" id="searchNombreC" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="IdCliente" class="control-label">Cliente</label>
                                    <select asp-for="IdCliente" class="form-control" id="selectCliente" asp-items="ViewBag.IdCliente" readonly>
                                        <option value="">Seleccionar Cliente</option>
                                    </select>
                                    <span asp-validation-for="IdCliente" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Direccion" class="control-label"></label>
                                    <input asp-for="Direccion" class="form-control" readonly />
                                    <span asp-validation-for="Direccion" class="text-danger"></span>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="IdUsuario" class="control-label">Usuario</label>
                                    <input asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario" readonly/>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="TipoPago" class="control-label">Tipo de Pago</label>
                                    <select asp-for="TipoPago" class="form-control" readonly>
                                        <option value="">Seleccionar Pago</option>
                                        <option value="CHEQUE">CHEQUE</option>
                                        <option value="CREDITO">CRÉDITO</option>
                                        <option value="EFECTIVO">EFECTIVO</option>
                                        <option value="TRANSFERENCIA">TRANSFERENCIA</option>
                                    </select>
                                    <span asp-validation-for="TipoPago" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Observaciones" class="control-label">Observaciones</label>
                                    <input asp-for="Observaciones" class="form-control" readonly />
                                    <span asp-validation-for="Observaciones" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Revisión Logística</h4>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="ObservacionesLogistica" class="control-label">Observación</label>
                                            <input asp-for="ObservacionesLogistica" class="form-control" readonly />
                                            <span asp-validation-for="ObservacionesLogistica" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group mt-2 text-center">
                            <input type="submit" value="Anular" class="btn btn-danger" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {

            $("#searchNombreC").on("input", function () {
                var query = $(this).val();
                if (query.length > 2) { // Buscar después de que el usuario haya ingresado al menos 3 caracteres
                    $.ajax({
                        url: '@Url.Action("SearchClienteEditReview", "NovedadComercialUsuario")',
                        data: { term: query },
                        success: function (data) {
                            var select = $("#selectCliente");
                            select.empty();
                            select.append($("<option>").val("").text("Seleccionar"));
                            $.each(data, function (index, item) {
                                select.append($("<option>").val(item.value).text(item.text));
                            });
                        }
                    });
                }
            });

        });
    </script>
}