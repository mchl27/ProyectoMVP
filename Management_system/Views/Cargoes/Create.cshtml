@model Management_system.Models.Cargo

@{
    ViewData["Title"] = "Crear Cargo";
    Layout = "~/Views/Shared/_Layout_main.cshtml";
}

<h1>Crear Cargo</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Agregar Nuevo Cargo</h4>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label">Nombre del Cargo:</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del cargo" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Crear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}