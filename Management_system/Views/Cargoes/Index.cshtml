@model IEnumerable<Management_system.Models.Cargo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_main.cshtml";
}

<p>
    <a asp-action="Configuration" asp-controller="Main" class="btn btn-secondary">Volver</a>
</p>

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.IdCargo" class="btn btn-info">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.IdCargo" class="btn btn-success">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.IdCargo" class="btn btn-danger"
                                   onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
