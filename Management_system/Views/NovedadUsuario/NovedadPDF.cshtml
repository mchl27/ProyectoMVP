@model Management_system.Models.Novedad

@{
    ViewData["Title"] = "Detalle Novedad";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Novedad General</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 14px;
            margin: 20px;
            padding: 0;
        }

        .container {
            width: 100%;
            max-width: 800px;
            margin: auto;
        }

        .title {
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            text-transform: uppercase;
            margin-bottom: 10px;
            border-bottom: 2px solid #007bff;
            padding-bottom: 5px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

            .table th, .table td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }

            .table th {
                background-color: #f0f0f0;
            }

        .observaciones {
            margin-top: 15px;
            padding: 10px;
            background: #f8f9fa;
            border-left: 5px solid #007bff;
        }

        .label {
            font-weight: bold;
            color: #333;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="title">Novedad General</h2>

        <table class="table">
            <tbody>
                <tr>
                    <th>Consecutivo</th>
                    <td>@Html.DisplayFor(model => model.Consecutivo)</td>
                    <th>Fecha Creación</th>
                    <td>@Html.DisplayFor(model => model.Fecha)</td>
                </tr>
                <tr>
                    <th>Usuario</th>
                    <td>@Html.DisplayFor(model => model.IdUsuarioNavigation.Username)</td>
                    <th>Fecha Salida</th>
                    <td>@Html.DisplayFor(model => model.FechaSalida)</td>
                </tr>
                <tr>
                    <th>Tipo de Novedad</th>
                    <td>@Html.DisplayFor(model => model.TipoNovedad)</td>
                    <th>Empresa</th>
                    <td>@Html.DisplayFor(model => model.Empresa)</td>
                </tr>
                <tr>
                    <th>Dirección</th>
                    <td>@Html.DisplayFor(model => model.Direccion)</td>
                    <th>Ciudad/Barrio</th>
                    <td>@Html.DisplayFor(model => model.CiudadBarrio)</td>
                </tr>
                <tr>
                    <th>Contacto</th>
                    <td>@Html.DisplayFor(model => model.Contacto)</td>
                    <th>Teléfono</th>
                    <td>@Html.DisplayFor(model => model.Telefono)</td>
                </tr>
            </tbody>
        </table>

        <div class="observaciones">
            <strong>Observaciones:</strong>
            <p>@Html.DisplayFor(model => model.Observaciones)</p>
        </div>
    </div>
</body>
</html>