            .then(data => {
                if (data.fileName) {
                    document.getElementById('LinkOc2').value = data.filePath;
                } else {
                    alert('Error uploading file');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error uploading file: ' + error.message);
            });
    });
</script>