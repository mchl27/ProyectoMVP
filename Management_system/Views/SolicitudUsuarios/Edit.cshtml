@model Management_system.Models.Solicitud

@{
    ViewData["Title"] = "Editar Solicitud";
    Layout = "~/Views/Shared/_Layout_main.cshtml";

    // Get current date and time
    DateTime fechaActual = DateTime.Now;
    // Set the minimum date and time as the current date and time
    string fechaMinima = fechaActual.ToString("yyyy-MM-ddTHH:mm");
    // Set the maximum date and time as the current date and time
    string fechaMaxima = fechaActual.ToString("yyyy-MM-ddTHH:mm");
}


<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

<style>
    .fixed-width-btn {
        width: 80px;
    }

    .alert-custom {
        color: red;
        font-size: 1.2em;
        display: none;
        margin-top: 10px;
    }

    .card {
        border-radius: 15px;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
        border-bottom: 1px solid #e5e5e5;
        padding-bottom: 0.5rem;
        text-transform: uppercase;
    }

    input[type="submit"] {
        width: 150px;
    }


    .title-main {
        font-size: 1.6em;
        color: #333;
    }

    .title-menu {
        font-size: 1.4em;
        color: #333;
    }

    .card-header-title {
        font-size: 1.1em;
        color: #333;
    }

    .lead {
        font-size: 1.1rem;
        font-weight: 300;
    }

    .lead-content {
        font-size: 1.0rem;
        font-weight: 300;
    }

    .btn {
        /* background-color: #007bff;
                        border-color: #007bff; */
        font-weight: 500;
        padding: 5px 15px;
        border-radius: 20px;
        transition: background-color 0.3s ease;
    }

    .step-indicator {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        margin-bottom: 30px;
    }

    .step-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .step-circle {
        width: 35px;
        height: 35px;
        border: 3px solid #ccc;
        border-radius: 50%;
        text-align: center;
        line-height: 30px;
        font-weight: bold;
        color: #555;
        background-color: #fff;
        transition: 0.3s;
    }

        .step-circle.active {
            border-color: #000000;
            color: #000000;
        }

    .step-label {
        margin-top: 5px;
        font-size: 0.85rem;
        color: #333;
        font-weight: 500;
    }

    .line {
        height: 3px;
        width: 60px;
        background-color: #ccc;
    }


</style>


<div class="container">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver
    </a>
</div>

<div class="step-indicator text-center mb-4">
    <div class="step-wrapper">
        <div class="step-circle active">1</div>
        <div class="step-label">Datos principales</div>
    </div>
    <div class="line"></div>
    <div class="step-wrapper">
        <div class="step-circle">2</div>
        <div class="step-label">Agregar Productos</div>
    </div>
</div>

<div class="container mt-2">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <p class="text-center title-menu">Editar Solicitud</p>
                    <hr/>
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdSolicitud" />


                        <div class="row">
                            @if (User.Identity.IsAuthenticated)
                            {
                                var userRole = User.FindFirst("Rol")?.Value;
                                var userEmpresa = User.FindFirst("Empresa")?.Value;

                                if ((userRole != null && (userRole == "Administrador" || userRole == "Super Usuario" || userRole == "Gerencia" || userRole == "Desarrollador" || userRole == "Soporte TI" || userRole == "Jefe de Proceso")))
                                {
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="IdEmpresa" class="control-label card-header-title">Empresa</label>
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="fas fa-building"></i>
                                                </span>
                                                <select asp-for="IdEmpresa" class="form-control lead-content" asp-items="ViewBag.IdEmpresa" required></select>
                                                <span asp-validation-for="IdEmpresa" class="text-danger"></span>
                                            </div>
                                            
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="ConsecutivoPorEmpresa" class="control-label card-header-title">Consecutivo</label>
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="fas fa-sort-numeric-up"></i>
                                                </span>
                                                <input asp-for="ConsecutivoPorEmpresa" class="form-control lead-content" readonly />
                                                <span asp-validation-for="ConsecutivoPorEmpresa" class="text-danger"></span>
                                            </div>

                                        </div>
                                    </div>

                                }
                                else
                                {
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <input asp-for="IdEmpresa" type="hidden" class="form-control lead-content" value="@((ViewData["IdEmpresa"] as SelectList)?.FirstOrDefault()?.Value)" required />
                                            <span asp-validation-for="IdEmpresa" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <input asp-for="ConsecutivoPorEmpresa" type="hidden" class="form-control lead-content" required />
                                            <span asp-validation-for="ConsecutivoPorEmpresa" class="text-danger"></span>
                                        </div>
                                    </div>
                                }
                            }
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="Fecha" class="control-label card-header-title">Fecha</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-calendar-alt"></i>
                                        </span>
                                        <input asp-for="Fecha" class="form-control lead-content" readonly />
                                        <span asp-validation-for="Fecha" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="FechaEntrega" class="control-label card-header-title">Fecha Entrega</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-calendar-alt"></i>
                                        </span>
                                        <input asp-for="FechaEntrega" class="form-control lead-content" required />
                                        <span asp-validation-for="FechaEntrega" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="IdUsuario" class="control-label card-header-title">Usuario</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-user"></i>
                                        </span>
                                        <select asp-for="IdUsuario" class="form-control lead-content" asp-items="ViewBag.IdUsuario" required></select>
                                        <span asp-validation-for="IdUsuario" class="text-danger"></span>
                                    </div>
                                    
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="IdVendedor" class="control-label card-header-title">Vendedor</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-user-tie"></i>
                                        </span>
                                        <select asp-for="IdVendedor" class="form-control lead-content" asp-items="ViewBag.IdVendedor" required></select>
                                        <span asp-validation-for="IdVendedor" class="text-danger"></span>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>

                        <hr/>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="searchNombreC" class="control-label card-header-title">Buscar Cliente</label>

                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-search"></i>
                                        </span>
                                        <input type="text" id="searchNombreC" class="form-control lead-content"
                                               placeholder="Ingresa Nit o Nombre del Cliente" />
                                    </div>

                                    @* <input type="text" id="searchNombreC" class="form-control lead-content" /> *@
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="IdCliente" class="control-label card-header-title">Cliente</label>
                                    <select asp-for="IdCliente" class="form-control lead-content" id="selectCliente" asp-items="ViewBag.IdCliente" required>
                                        <option value="" class="lead-content">Seleccionar Cliente</option>
                                    </select>
                                    <span asp-validation-for="IdCliente" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="searchNombreP" class="control-label card-header-title">Buscar Proveedor</label>
                                    
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-search"></i>
                                        </span>
                                        <input type="text" id="searchNombreP" class="form-control lead-content"
                                               placeholder="Ingresa Nit o Nombre del Proveedor" />
                                    </div>
                                    
                                    @* <input type="text" id="searchNombreP" class="form-control lead-content" /> *@
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="IdProveedor" class="control-label card-header-title">Proveedor Sugerido</label>
                                    <select asp-for="IdProveedor" class="form-control lead-content" id="selectProveedor" asp-items="ViewBag.IdProveedor" required>
                                        <option value="" class="lead-content">Seleccionar Proveedor</option>
                                    </select>
                                    <span asp-validation-for="IdProveedor" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Observaciones" class="control-label card-header-title">Observaciones</label>
                                    <input asp-for="Observaciones" class="form-control lead-content" required />
                                    <span asp-validation-for="Observaciones" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Negociacion" class="control-label card-header-title">Negociación</label>
                                    <input asp-for="Negociacion" class="form-control lead-content" required />
                                    <span asp-validation-for="Negociacion" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ObservacionesActualizacion" class="control-label card-header-title">Observacion de compras</label>
                                    <input asp-for="ObservacionesActualizacion" class="form-control lead-content" readonly />
                                    <span asp-validation-for="ObservacionesActualizacion" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ProveedorSugerido" class="control-label card-header-title">Proveedor Final</label>
                                    <input asp-for="ProveedorSugerido" class="form-control lead-content" readonly />
                                    <span asp-validation-for="ProveedorSugerido" class="text-danger"></span>
                                </div>
                            </div>

                        </div>

                       @*  <div class="card mt-3">
                            <div class="card-body">
                                <div class="row">
                                    
                                </div>
                            </div>
                        </div>
                         *@
                        <div class="form-group text-center mt-3">
                            <button type="submit" class="btn btn-primary">Revisar productos</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#searchNombreP").on("input", function () {
                var query = $(this).val();
                if (query.length > 2) { // Buscar después de que el usuario haya ingresado al menos 3 caracteres
                    $.ajax({
                        url: '@Url.Action("SearchProveedorEdit", "SolicitudUsuarios")',
                        data: { term: query },
                        success: function (data) {
                            var select = $("#selectProveedor");
                            select.empty();
                            select.append($("<option>").val("").text("Seleccione un proveedor"));
                            $.each(data, function (index, item) {
                                select.append($("<option>").val(item.value).text(item.text));
                            });
                        }
                    });
                }
            });

            $("#searchNombreC").on("input", function () {
                var query = $(this).val();
                if (query.length > 2) { // Buscar después de que el usuario haya ingresado al menos 3 caracteres
                    $.ajax({
                        url: '@Url.Action("SearchClienteEdit", "SolicitudUsuarios")',
                        data: { term: query },
                        success: function (data) {
                            var select = $("#selectCliente");
                            select.empty();
                            select.append($("<option>").val("").text("Seleccione un cliente"));
                            $.each(data, function (index, item) {
                                select.append($("<option>").val(item.value).text(item.text));
                            });
                        }
                    });
                }
            });
        });
    </script>
}

