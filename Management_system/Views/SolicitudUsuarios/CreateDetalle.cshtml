@model SolicitudCompraIndexViewModel

@{
    ViewData["Title"] = "Detalle Solicitud";
    Layout = "~/Views/Shared/_Layout_main.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

<style>
    .fixed-width-btn {
        width: 50px;
    }

    .alert-custom {
        color: red;
        font-size: 1.2em;
        display: none;
        margin-top: 10px;
    }

    .card {
        border-radius: 15px;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
        border-bottom: 1px solid #e5e5e5;
        padding-bottom: 0.5rem;
        text-transform: uppercase;
    }

    input[type="submit"] {
        width: 150px;
    }


    .table {
        background-color: #ffffff;
        border-radius: 10px;
        overflow: hidden;
    }

        .table th {
            /* background-color: #343a40;
                color: #ffffff; */
            text-align: center;
            font-weight: 600;
            vertical-align: middle;
            font-size: 1rem;
        }

        .table td {
            text-align: center;
            vertical-align: middle;
            font-size: 0.95rem;
            color: #495057;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f2f2f2;
    }

    .table-hover tbody tr:hover {
        background-color: #e9ecef;
    }

    .title-main {
        font-size: 1.6em;
        color: #333;
    }

    .title-menu {
        font-size: 1.4em;
        color: #333;
    }

    .card-header-title {
        font-size: 1.1em;
        color: #333;
    }

    .lead {
        font-size: 1.1rem;
        font-weight: 300;
    }

    .lead-content {
        font-size: 1.0rem;
        font-weight: 300;
    }

    .btn {
        /* background-color: #007bff;
                        border-color: #007bff; */
        font-weight: 500;
        padding: 5px 15px;
        border-radius: 20px;
        transition: background-color 0.3s ease;
    }


    .step-indicator {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        margin-bottom: 30px;
    }

    .step-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .step-circle {
        width: 35px;
        height: 35px;
        border: 3px solid #ccc;
        border-radius: 50%;
        text-align: center;
        line-height: 30px;
        font-weight: bold;
        color: #555;
        background-color: #fff;
        transition: 0.3s;
    }

        .step-circle.active {
            border-color: #000000;
            color: #000000;
        }

    .step-label {
        margin-top: 5px;
        font-size: 0.85rem;
        color: #333;
        font-weight: 500;
    }

    .line {
        height: 3px;
        width: 60px;
        background-color: #ccc;
    }

</style>


<div class="step-indicator text-center mb-4">
    <div class="step-wrapper">
        <div class="step-circle">1</div>
        <div class="step-label">Datos principales</div>
    </div>
    <div class="line"></div>
    <div class="step-wrapper">
        <div class="step-circle active">2</div>
        <div class="step-label">Agregar Productos</div>
    </div>
</div>



<div class="alert-custom" id="timeAlert">
    <i class="fas fa-exclamation-circle"></i>
    Las solicitudes creadas a partir de ahora serán procesadas y validadas. Sin embargo, es posible que se complete hasta mañana en la mañana.
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">

            <div class="card shadow-sm p-3 mb-2">
                <h3 class="text-center"><span class="text-black">@Model.Solicitudes.IdEmpresaNavigation.Nombre - SOLICITUD: @Model.Solicitudes.ConsecutivoPorEmpresa</span></h3>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <strong>Fecha:</strong> @Model.Solicitudes.Fecha<br>
                        <strong>Estado:</strong> <span class="badge bg-success">@Model.Solicitudes.Estado</span>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <strong>Vendedor:</strong> @Model.Solicitudes.IdVendedorNavigation.Nombre
                        <br>
                        <strong>Usuario:</strong> @Model.Solicitudes.IdUsuarioNavigation.Username
                    </div>
                </div>
            </div>

            <!-- Detalles de Cliente -->
            <div class="card shadow-sm p-3 mb-2">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <h5 class="mb-3">Datos del Cliente</h5>
                            <div class="col-md-12">
                                <strong>Nombre:</strong> @Model.Solicitudes.IdClienteNavigation.Nombre<br>
                                <strong>Ciudad:</strong> @Model.Solicitudes.IdClienteNavigation.Ciudad<br>
                                <strong>Dirección:</strong> @Model.Solicitudes.IdClienteNavigation.Direccion<br>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="row">
                            <h5 class="mb-3">Datos Proveedor</h5>
                            <div class="col-md-12">
                                <strong>Nombre:</strong> @Model.Solicitudes.IdProveedorNavigation.Nombre<br>
                                <strong>Ciudad:</strong> @Model.Solicitudes.IdProveedorNavigation.Ciudad<br>
                                <strong>Dirección:</strong> @Model.Solicitudes.IdProveedorNavigation.Direccion<br>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="row">
                    <div class="col-md-4 text-center">
                        <strong>Fecha Entrega:</strong> @Model.Solicitudes.FechaEntrega<br>
                    </div>
                    <div class="col-md-4 text-center">
                        <strong>Negociación:</strong> @Model.Solicitudes.Negociacion<br>
                    </div>
                    <div class="col-md-4 text-center">
                        <strong>Observaciones:</strong> @Model.Solicitudes.Observaciones<br>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm p-3 mb-2">
                <div class="card-body">
                    <h5 class="mb-3">Detalles de la Cotización</h5>
                    <div class="form-group">
                        @{
                            if (Model.Solicitudes.Estado != "Anulado" && Model.Solicitudes.Estado != "OC Creada" && Model.Solicitudes.Estado != "Revisada"
                                && Model.Solicitudes.Estado != "Abierta" && Model.Solicitudes.Estado != "Urgente" && Model.Solicitudes.Estado != "Legalizar")
                            {
                                @Html.ActionLink("Agregar Producto", "CreateProducto", new { idSolicitud = Model.Solicitudes.IdSolicitud }, new { @class = "btn btn-primary" })
                            }
                            else
                            {
                                <button type="button" class="btn btn-primary" disabled>Agregar Producto</button>
                            }
                        }
                    </div>

                    <div class="table-responsive">
                        <table id="detallesTabla" class="table table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Acciones</th>
                                    <th>Referencia</th>
                                    <th>Descripción</th>
                                    <th>Ud.</th>
                                    <th>Observación</th>
                                    <th>Cantidad</th>
                                    <th>Costo</th>
                                    <th>Venta</th>
                                    <th>Rentabilidad</th>
                                    <th>Alerta</th>
                                    <th>Link</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var detalle in Model.SolicitudDetalles)
                                {
                                    <tr>
                                        <td>
                                            @{
                                                if (Model.Solicitudes.Estado != "Anulado" && Model.Solicitudes.Estado != "OC Creada" && Model.Solicitudes.Estado != "Revisada"
                                                    && Model.Solicitudes.Estado != "Abierta" && Model.Solicitudes.Estado != "Urgente" && Model.Solicitudes.Estado != "Legalizar")
                                                {
                                                    <a asp-action="CreateProductoEdit" asp-route-id="@detalle.IdSolicitudDetalle" class="btn btn-primary btn-sm fixed-width-btn">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="CreateProductoDelete" asp-route-id="@detalle.IdSolicitudDetalle" class="btn btn-danger btn-sm fixed-width-btn">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-primary btn-sm fixed-width-btn" disabled>
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-danger btn-sm fixed-width-btn" disabled>
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                }
                                            }
                                        </td>
                                        <td>@detalle.IdProductoNavigation.Referencia</td>
                                        <td>@detalle.IdProductoNavigation.Descripcion</td>
                                        <td>@detalle.IdProductoNavigation.Unidad</td>
                                        <td>@detalle.Observaciones</td>
                                        <td>@detalle.Cantidad</td>
                                        <td>@string.Format("{0:C}", detalle.PrecioCosto)</td>
                                        <td>@string.Format("{0:C}", detalle.PrecioVenta)</td>
                                        <td>@String.Format("{0:0.##}%", detalle.Rentabilidad * 100)</td>
                                        <td>
                                            @if (detalle.Rentabilidad < 0.35M)
                                            {
                                                <span style="color: red;"><i class="fas fa-exclamation-circle"></i> Rentabilidad baja</span>
                                            }
                                            else
                                            {
                                                <span style="color: green;"><i class="fas fa-check-circle"></i> Rentabilidad OK</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrWhiteSpace(detalle?.IdProductoNavigation.Link))
                                            {
                                                <div class="mb-1">
                                                    <span class="d-none link-text">@detalle.IdProductoNavigation.Link</span>
                                                    <button type="button" class="btn btn-outline-secondary btn-sm copy-btn">
                                                        <i class="fas fa-copy"></i> Copiar Link
                                                    </button>
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>

                            @{
                                decimal subtotal = Model.SolicitudDetalles.Sum(sd => (decimal)(sd.PrecioCosto * sd.Cantidad));
                                decimal iva = subtotal * 0.19M;
                                decimal total = subtotal + iva;
                            }
                            <tfoot>
                                <tr class="font-weight-bold">
                                    <td colspan="9"></td>
                                    <td>Subtotal:</td>
                                    <td>@string.Format("{0:C}", subtotal)</td>
                                </tr>
                                <tr class="font-weight-bold">
                                    <td colspan="9"></td>
                                    <td>IVA (19%):</td>
                                    <td>@string.Format("{0:C}", iva)</td>
                                </tr>
                                <tr class="font-weight-bold">
                                    <td colspan="9"></td>
                                    <td>Total:</td>
                                    <td>@string.Format("{0:C}", total)</td>
                                </tr>
                            </tfoot>

                        </table>
                    </div>


                    <form id="updateStatusForm" asp-action="UpdateStatus">
                        <input type="hidden" name="idSolicitud" value="@Model.Solicitudes.IdSolicitud" />
                        <div class="form-group">
                            <label for="nuevoEstado card-header-title">Actualizar Estado</label>
                            <select name="nuevoEstado" class="form-control lead-content" required>
                                <option value="Abierta">Abierta</option>
                                <option value="Urgente">Urgente</option>
                                <option value="Legalizar">Legalizar</option>
                            </select>
                        </div>
                        <div class="form-group text-center mt-3">
                            @{
                                if (Model.Solicitudes.Estado != "Anulado" && Model.Solicitudes.Estado != "OC Creada" && Model.Solicitudes.Estado != "Revisada"
                                    && Model.Solicitudes.Estado != "Abierta" && Model.Solicitudes.Estado != "Urgente" && Model.Solicitudes.Estado != "Legalizar")
                                {
                                    <button type="button" onclick="guardarYSalir()" class="btn btn-success">
                                        <i class="fas fa-save"></i> Guardar
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-secondary" disabled>Guardar y Salir</button>
                                }
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function guardarYSalir() {
        var tabla = document.getElementById('detallesTabla');
        var filas = tabla.getElementsByTagName('tbody')[0].getElementsByTagName('tr').length;

        if (filas === 0) {
            alert('No se puede guardar y salir. La tabla de detalles está vacía.');
        } else {
            // Enviar el formulario si hay filas en la tabla
            document.getElementById('updateStatusForm').submit();
        }
    }

    document.addEventListener('DOMContentLoaded', function () {
        var now = new Date();
        var currentHour = now.getHours();
        var currentMinutes = now.getMinutes();

        // Check if the current time is after 4:59 PM
        if (currentHour > 16 || (currentHour === 16 && currentMinutes >= 59)) {
            document.getElementById('timeAlert').style.display = 'block';
        }
    });
</script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).on('click', '.copy-btn', function () {
        const text = $(this).siblings('.link-text').text().trim();
        if (navigator.clipboard) {
            navigator.clipboard.writeText(text).then(function () {
                // Cambiar ícono o texto temporalmente como feedback
                const original = $(this).html();
                $(this).html('<i class="fas fa-check"></i> Copiado');
                const btn = $(this);
                setTimeout(() => {
                    btn.html(original);
                }, 1500);
            }.bind(this)).catch(function (err) {
                alert('Error al copiar: ' + err);
            });
        } else {
            alert('Tu navegador no soporta la función de copiar al portapapeles.');
        }
    });
</script>