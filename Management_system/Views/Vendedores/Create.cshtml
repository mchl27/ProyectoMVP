@model Management_system.Models.Vendedor

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_main.cshtml";
}

<h1>Create</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Crear Vendedor</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Identificacion" class="control-label">Identificación</label>
                <input asp-for="Identificacion" class="form-control" />
                <span asp-validation-for="Identificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdArea" class="control-label">Área</label>
                <select asp-for="IdArea" class="form-control" asp-items="ViewBag.IdArea"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cargo" class="control-label">Cargo</label>
                <select asp-for="Cargo" class="form-control" asp-items="ViewBag.Cargo"></select>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label">Estado</label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}