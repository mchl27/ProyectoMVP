@model Management_system.Models.Vendedor

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout_main.cshtml";
}

<h1>Detalles del Vendedor</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Detalles de los Vendedores</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Identificación
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Identificacion)
            </dd>
            <dt class="col-sm-2">
                Nombre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                Estado
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estado)
            </dd>
            <dt class="col-sm-2">
                Cargo
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CargoNavigation.Nombre)
            </dd>
            <dt class="col-sm-2">
                Área
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdAreaNavigation.Nombre)
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.IdVendedor" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>