@model Management_system.Models.Vendedor

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_main.cshtml";
}

<h1>Edit</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Editar Vendedor</h4>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdVendedor" />
                    <div class="form-group">
                        <label asp-for="Identificacion" class="control-label">Identificación</label>
                        <input asp-for="Identificacion" class="form-control" />
                        <span asp-validation-for="Identificacion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label">Nombre</label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdArea" class="control-label">Área</label>
                        <select asp-for="IdArea" class="form-control" asp-items="ViewBag.IdArea"></select>
                        <span asp-validation-for="IdArea" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cargo" class="control-label">Cargo</label>
                        <select asp-for="Cargo" class="form-control" asp-items="ViewBag.Cargo"></select>
                        <span asp-validation-for="Cargo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Estado" class="control-label">Estado</label>
                        <input asp-for="Estado" class="form-control" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}