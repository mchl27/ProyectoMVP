@{
    ViewData["Title"] = "Inicio";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

<style>
    /* Estilo del hero section */
    .hero-section {
        padding: 4rem 2rem;
        background: #ffffff; /* fondo blanco */
        color: #000000; /* texto negro */
        border-radius: 1rem;
        margin-bottom: 3rem;
        border: 2px solid rgba(0, 0, 0, 0.1); /* borde elegante y suave */
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1); /* sombra suave */
    }

        /* Botón dentro del hero */
        .hero-section .btn {
            font-size: 1.1rem;
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
        }

    /* Estilo de las tarjetas (feature cards) */
    .feature-card {
        border-radius: 1rem; /* bordes redondeados */
        transition: all 0.3s ease;
        /* background: #ffffff; */
        padding: 2rem;
        box-shadow: 0 6px 20px rgba(0,0,0,0.08);
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

    /* Icono dentro de las tarjetas */
    .card-icon {
        font-size: 2.5rem;
        color: #1a2b3c; /* un tono oscuro elegante */
        margin-bottom: 1rem;
    }

    /* Título de la tarjeta */
    .card-title {
        font-size: 1.3rem;
        font-weight: normal;
    }

    .title-main {
        font-size: 1.6em;
        color: #333;
    }

    .title-menu {
        font-size: 1.4em;
        color: #333;
    }

    .card-header-title {
        font-size: 1.1em;
        color: #333;
    }

    .lead {
        font-size: 1.1rem;
        font-weight: 300;
    }

    .lead-content {
        font-size: 1.0rem;
        font-weight: 300;
    }


</style>

<div class="container">
    <!-- Hero Principal -->
    <div class="row hero-section align-items-center">
        <div class="col-md-6">
            <p class="display-6">Sistema de Gestión Empresarial</p>
            <p class="mt-3 lead">Administra y optimiza las operaciones de tu empresa desde una sola plataforma, de manera fácil y eficiente.</p>
            <a href="@Url.Action("Login", "Home")" class="btn btn-dark mt-3">
                <i class="fas fa-sign-in-alt"></i> Ingresar al sistema
            </a>
        </div>
        <div class="col-md-6 text-center">
            <img src="img/2. Fachada (6).jpeg" alt="Gestión Empresarial" class="img-fluid rounded shadow-lg" width="490" height="390">
        </div>
    </div>

    <!-- Sección de Funcionalidades -->
    <div class="row text-center mb-5">
        <p class="mb-4 title-main">¿Qué puedes hacer aquí?</p>
        <div class="col-md-4 mb-4">
            <div class="card p-4 feature-card">
                <div class="card-icon"><i class="fas fa-tools"></i></div>
                <div class="title-menu">Gestión de Procesos</div>
                <p class="text-muted">Gestiona los modulos de compra, logistica, recepcion de mercancia, contabilidad, etc.</p>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card p-4 feature-card">
                <div class="card-icon"><i class="fas fa-chart-line"></i></div>
                <div class="title-menu">Informes y Análisis</div>
                <p class="text-muted">Visualiza métricas clave y toma decisiones inteligentes.</p>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card p-4 feature-card">
                <div class="card-icon"><i class="fas fa-cogs"></i></div>
                <div class="title-menu">Automatización</div>
                <p class="text-muted">Automatiza procesos internos y ahorra tiempo valioso.</p>
            </div>
        </div>
    </div>
</div>


