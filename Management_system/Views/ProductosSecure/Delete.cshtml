@model Management_system.Models.Producto

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout_main.cshtml";
}

<h1>Delete Product</h1>

<h3>Are you sure you want to delete this product?</h3>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Product Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Empresa</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Empresa)</dd>
            <dt class="col-sm-2">Referencia</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Referencia)</dd>
            <dt class="col-sm-2">Descripción</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Descripcion)</dd>
            <dt class="col-sm-2">Unidad</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Unidad)</dd>
            <dt class="col-sm-2">Estado</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Estado)</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProducto" />
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

