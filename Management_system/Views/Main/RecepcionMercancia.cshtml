<!-- Botón para regresar al inicio -->
<button onclick="scrollToTop()" class="btn btn-primary" id="scrollTopButton">
    <i class="fas fa-arrow-up"></i> <!-- Icono de flecha hacia arriba -->
</button>


<style>
    #scrollTopButton {
        position: fixed;
        bottom: 50px; /* Espacio desde la parte inferior de la ventana */
        right: 20px; /* Espacio desde el lado derecho de la ventana */
        z-index: 1000; /* Asegura que el botón esté por encima de otros elementos */
        width: 40px; /* Ancho del botón */
        height: 40px; /* Alto del botón */
        border-radius: 50%; /* Hace el botón redondo */
        display: flex; /* Centra el contenido dentro del botón */
        align-items: center; /* Centra verticalmente el contenido */
        justify-content: center; /* Centra horizontalmente el contenido */
        font-size: 18px; /* Tamaño del icono */
    }
</style>

<script>
    function scrollToTop() {
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }
</script>
