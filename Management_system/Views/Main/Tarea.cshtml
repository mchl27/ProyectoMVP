<div class="container">

    <div class="section">

        <p class="title-main">Tareas</p>
        <p class="lead">Este módulo permite gestionar y hacer seguimiento a las tareas programadas de forma eficiente y organizada.</p>

        <!-- Tarjetas KPI -->
        <div class="row">
            <div class="col-md-3">
                <div class="card shadow-lg rounded-4 text-center p-3">
                    <h5>Tareas Abiertas</h5>
                    <h3 class="text-primary"></h3>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-lg rounded-4 text-center p-3">
                    <h5>Tareas en Proceso</h5>
                    <h3 class="text-warning"></h3>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-lg rounded-4 text-center p-3">
                    <h5>Tareas Asignadas</h5>
                    <h3 class="text-success"></h3>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-lg rounded-4 text-center p-3">
                    <h5>Total Tareas</h5>
                    <h3 class="text-danger">@* @ViewBag.TotalSolicitudesAnuladas *@</h3>
                </div>
            </div>
        </div>

    </div>
    <hr>

    <div class="solicitud">
        <p class="title-menu">
            <i class="fas fa-plus me-2"></i> Tareas
        </p>
        <div class="container">
            <div class="row">

                @* 1. Option *@
                <div class="col-md-4 mb-3">
                    <a href="@Url.Action("Create", "Tareas")" class="text-decoration-none text-dark">
                        <div class="card shadow-lg rounded-4 text-center p-4">
                            <div class="mb-3">
                                <i class="fas fa-plus-circle fa-3x"></i>
                            </div>
                            <h4 class="card-title fw-normal">Crear Tarea</h4>
                            <p class="text-muted">Registra una nueva tarea, asigna responsables, fechas y adjunta la información</p>
                            <button class="btn btn-dark mt-2">Ir al módulo</button>
                        </div>
                    </a>
                </div>


                @* 2. Option *@
                <div class="col-md-4 mb-3">
                    <a href="@Url.Action("SeguimientoMain", "Tareas")" class="text-decoration-none text-dark">
                        <div class="card shadow-lg rounded-4 text-center p-4">
                            <div class="mb-3">
                                <i class="fas fa-tasks fa-3x"></i>
                            </div>
                            <h4 class="card-title fw-normal">Seguimiento de Tareas</h4>
                            <p class="text-muted">Consulta el progreso de las tareas, realiza trazabilidad, revisa subtareas.</p>
                            <button class="btn btn-dark mt-2">Ir al módulo</button>
                        </div>
                    </a>
                </div>



                @* 3. Option *@
                <div class="col-md-4 mb-3">
                    <a href="@Url.Action("Calendar", "Tareas")" class="text-decoration-none text-dark">
                        <div class="card shadow-lg rounded-4 text-center p-4">
                            <div class="mb-3">
                                <i class="fas fa-calendar-alt fa-3x"></i>
                            </div>
                            <h4 class="card-title fw-normal">Vista Calendario</h4>
                            <p class="text-muted">Visualiza las tareas programadas en un calendario para gestionar tiempos.</p>
                            <button class="btn btn-dark mt-2">Ir al módulo</button>
                        </div>
                    </a>
                </div>


                @* 4. Option *@
                <div class="col-md-4 mb-3">
                    <a href="@Url.Action("Gantt", "Tareas")" class="text-decoration-none text-dark">
                        <div class="card shadow-lg rounded-4 text-center p-4">
                            <div class="mb-3">
                                <i class="fas fa-project-diagram fa-3x"></i>
                            </div>
                            <h4 class="card-title fw-normal">Vista Diagrama de Gantt</h4>
                            <p class="text-muted">Analiza la planificación y el avance de tareas a través de un diagrama de Gantt.</p>
                            <button class="btn btn-dark mt-2">Ir al módulo</button>
                        </div>
                    </a>
                </div>


                @* 5. Option *@
                @if (User.Identity.IsAuthenticated)
                {
                    var userRole = User.FindFirst("Rol")?.Value;
                    if (userRole != null && (userRole == "Administrador" || userRole == "Super Usuario" || userRole == "Gerencia" || userRole == "Desarrollador" || userRole == "Soporte TI"))
                    {

                        <div class="col-md-4 mb-3">
                            <a href="@Url.Action("Overridemain", "Tareas")" class="text-decoration-none text-dark">
                                <div class="card shadow-lg rounded-4 text-center p-4">
                                    <div class="mb-3">
                                        <i class="fas fa-ban fa-3x text-danger"></i>
                                    </div>
                                    <h4 class="card-title fw-normal">Anular Tarea</h4>
                                    <p class="text-muted">Permite cancelar tareas que ya no son necesarias o que han sido reemplazadas.</p>
                                    <button class="btn btn-dark mt-2">Ir al módulo</button>
                                </div>
                            </a>
                        </div>
                    }
                }

            </div>
        </div>
        
        <hr>

        <p class="title-menu mt-3">
            <i class="fas fa-search me-2"></i> Consultar
        </p>
        <div class="container">
            <div class="row">

                @* 6. Option *@
                <div class="col-md-4">
                    <a href="@Url.Action("ConsulteReview", "Tareas")" class="text-decoration-none text-dark">
                        <div class="card shadow-lg rounded-4 text-center p-4">
                            <div class="mb-3">
                                <i class="fas fa-list-alt fa-3x"></i>
                            </div>
                            <h4 class="card-title fw-normal">Movimiento Resumen</h4>
                            <p class="text-muted">Visualiza un resumen general de todas las tareas registradas.</p>
                            <button class="btn btn-dark mt-2">Ir al módulo</button>
                        </div>
                    </a>
                </div>

                @* 7. Option *@
                <div class="col-md-4">
                    <a href="@Url.Action("ConsulteDetails", "TareasSubs")" class="text-decoration-none text-dark">
                        <div class="card shadow-lg rounded-4 text-center p-4">
                            <div class="mb-3">
                                <i class="fas fa-align-justify fa-3x"></i>
                            </div>
                            <h4 class="card-title fw-normal">Movimiento Detalle</h4>
                            <p class="text-muted">Muestra un resumen detallado de todas las tareas.</p>
                            <button class="btn btn-dark mt-2">Ir al módulo</button>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <hr>

    <div class="section">
        <P class="title-main">
            Análisis
        </P>
        <p class="lead">Este módulo se encargará de analizar los tiempos en los procesos relacionados, proporcionando una visión detallada para mejorar la eficiencia y la toma de decisiones.</p>
    </div>
    <hr>

    <div class="analyze">
        <p class="title-menu mt-3">
            <i class="fas fa-chart-line me-2"></i> Tareas
        </p>
        <div class="container">
            <div class="row">

                @* 9. Option *@
                <div class="col-md-4">
                    <a href="@Url.Action("AnalyzeTarea", "Tareas")" class="text-decoration-none text-dark">
                        <div class="card shadow-lg rounded-4 text-center p-4">
                            <div class="mb-3">
                                <i class="fas fa-chart-pie fa-3x"></i>
                            </div>
                            <h4 class="card-title fw-normal">Analisis Tarea</h4>
                            <p class="text-muted">Consulta indicadores clave sobre el estado, cumplimiento de las tareas.</p>
                            <button class="btn btn-dark mt-2">Ir al módulo</button>
                        </div>
                    </a>
                </div>


            </div>
        </div>
    </div>

</div>



<!-- Botón para regresar al inicio -->
<button onclick="scrollToTop()" class="btn btn-primary" id="scrollTopButton">
    <i class="fas fa-arrow-up"></i> <!-- Icono de flecha hacia arriba -->
</button>


<style>
    #scrollTopButton {
        position: fixed;
        bottom: 50px; /* Espacio desde la parte inferior de la ventana */
        right: 20px; /* Espacio desde el lado derecho de la ventana */
        z-index: 1000; /* Asegura que el botón esté por encima de otros elementos */
        width: 40px; /* Ancho del botón */
        height: 40px; /* Alto del botón */
        border-radius: 50%; /* Hace el botón redondo */
        display: flex; /* Centra el contenido dentro del botón */
        align-items: center; /* Centra verticalmente el contenido */
        justify-content: center; /* Centra horizontalmente el contenido */
        font-size: 18px; /* Tamaño del icono */
    }
</style>

<script>
    function scrollToTop() {
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }
</script>
